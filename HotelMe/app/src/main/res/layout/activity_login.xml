<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gatech.hotelme.Controller.LoginActivity">

    <ImageView
        android:id="@+id/login_screen_pic"
        android:layout_width="367dp"
        android:layout_height="141dp"
        android:background="@drawable/hotels"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:onClick="onLoginPressed"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="218dp"
        android:layout_marginBottom="151dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/reg_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login_button"
        android:layout_alignEnd="@+id/welcome_text"
        android:layout_marginBottom="41dp"
        android:ems="10"
        android:hint="registration code "
        android:inputType="textPersonName"/>

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:text="Welcome to HotelMe!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_below="@+id/login_screen_pic"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
