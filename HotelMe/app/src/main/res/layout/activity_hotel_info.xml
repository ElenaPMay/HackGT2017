<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gatech.hotelme.Controller.HotelInfoActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="384dp"
        android:layout_height="276dp"
        android:background="@drawable/marriott"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="5dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/close_text"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/hours_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hours"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="291dp"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/close_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="270dp"
        tools:layout_editor_absoluteY="338dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/hours_text"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="46dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/close_text"
        android:layout_marginEnd="38dp"
        android:layout_toStartOf="@+id/close_text"
        android:text="Open"
        android:textStyle="bold" />

    <TextClock
        android:id="@+id/front_desk_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/pool_open" />

    <TextClock
        android:id="@+id/front_desk_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pool_open"
        android:layout_toEndOf="@+id/textView" />

    <TextClock
        android:id="@+id/pool_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/front_desk_open"
        android:layout_marginTop="14dp"
        android:layout_toEndOf="@+id/hours_text" />

    <TextClock
        android:id="@+id/pool_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/front_desk_close"
        android:layout_alignTop="@+id/pool_open" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_toStartOf="@+id/hours_text"
        android:layout_marginEnd="36dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Front Desk: "
        android:layout_alignBaseline="@+id/front_desk_open"
        android:layout_alignBottom="@+id/front_desk_open"
        android:layout_alignEnd="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pool:"
        android:layout_alignBaseline="@+id/pool_open"
        android:layout_alignBottom="@+id/pool_open"
        android:layout_alignEnd="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView2"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="15dp"
        android:text="Gym:" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="18dp"
        android:text="Resturant:" />

    <TextClock
        android:id="@+id/gym_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/pool_open"
        android:layout_alignTop="@+id/textView5" />

    <TextClock
        android:id="@+id/gym_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/pool_close"
        android:layout_alignTop="@+id/gym_open" />

    <TextClock
        android:id="@+id/resturant_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignStart="@+id/gym_open" />

    <TextClock
        android:id="@+id/resturant_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/gym_close"
        android:layout_alignTop="@+id/resturant_open" />
</RelativeLayout>
