<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gatech.hotelme.Controller.CheckOutSuccess">
    <TextView
        android:id="@+id/success_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Success!"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="36sp"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="72dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp" />

    <TextView
        android:id="@+id/success_text2"
        android:layout_width="294dp"
        android:layout_height="36dp"
        android:text="You have successfully checked out to your hotel"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="134dp"
        android:layout_below="@+id/success_text"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="45dp" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:background="@drawable/thumbs_up"
        android:layout_width="173dp"
        android:layout_height="141dp"
        tools:layout_editor_absoluteX="106dp"
        tools:layout_editor_absoluteY="185dp"
        android:layout_below="@+id/success_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="111dp" />

</RelativeLayout>
