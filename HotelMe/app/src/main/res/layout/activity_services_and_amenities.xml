<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gatech.hotelme.Controller.ServicesAndAmenities">

    <Button
        android:id="@+id/hotel_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:fontFamily="sans-serif-condensed"
        android:onClick="onHotelInfoPressed"
        android:text="hotel info"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="183dp"
        android:layout_below="@+id/textView11"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"/>

    <Button
        android:id="@+id/room_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/search_google_maps"
        android:layout_below="@+id/search_google_maps"
        android:layout_marginTop="26dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:fontFamily="sans-serif-condensed"
        android:onClick="onRoomServicePressed"
        android:text="   Room Service   "
        android:textAlignment="textEnd"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        tools:layout_editor_absoluteX="116dp"
        tools:layout_editor_absoluteY="394dp"/>

    <Button
        android:id="@+id/cleaning_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:fontFamily="sans-serif-condensed"
        android:onClick="oncleaning_service_Pressed"
        android:text="Cleaning Service"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        tools:layout_editor_absoluteX="116dp"
        tools:layout_editor_absoluteY="394dp"
        android:layout_alignBaseline="@+id/room_service"
        android:layout_alignBottom="@+id/room_service"
        android:layout_alignStart="@+id/hotel_resturant" />

    <Button

        android:id="@+id/hotel_resturant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:fontFamily="sans-serif-condensed"
        android:text="hotel resturant"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        tools:layout_editor_absoluteX="116dp"
        tools:layout_editor_absoluteY="394dp"
        android:layout_alignBaseline="@+id/search_google_maps"
        android:layout_alignBottom="@+id/search_google_maps"
        android:layout_toEndOf="@+id/hotel_info"/>

    <Button
        android:id="@+id/search_google_maps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hotel_info"
        android:layout_marginTop="48dp"
        android:layout_toStartOf="@+id/hotel_info"
        android:backgroundTint="@color/colorPrimaryDark"
        android:fontFamily="sans-serif-condensed"
        android:onClick="onGoogleMapsPressed"
        android:text="   GOOGLE MAPS   "
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        tools:layout_editor_absoluteX="116dp"
        tools:layout_editor_absoluteY="394dp"/>

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/black_background"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Service And Amenities"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="30sp"
        android:textStyle="bold" />

</RelativeLayout>
