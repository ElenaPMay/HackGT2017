<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gatech.hotelme.Controller.HotelMainActivity">

    <Button
        android:id="@+id/room_key"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:text="Get Room Key"
        android:onClick="onGetKeyPressed"
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="177dp" />

    <Button
        android:id="@+id/call_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call Front Desk"
        tools:layout_editor_absoluteX="121dp"
        tools:layout_editor_absoluteY="249dp" />

    <Button
        android:id="@+id/reservation_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onResInfoPressed"
        android:text="Reservation Info"
        tools:layout_editor_absoluteX="117dp"
        tools:layout_editor_absoluteY="324dp" />

    <Button
        android:id="@+id/hotel_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onServicesPressed"
        android:text="Hotel Services and Amenities"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="391dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="384dp"
        android:layout_height="152dp"
        android:background="@drawable/marriott"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/check_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="check out"
        android:onClick="onCheckOutPressed"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="458dp" />
</android.support.constraint.ConstraintLayout>
